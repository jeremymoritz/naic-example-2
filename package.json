{
  "name": "naic-example-2",
  "version": "1.1.0",
  "description": "Angular 2 Single-Page App Template for NAIC",
  "scripts": {
    "clean": "rm -r dist/*",
    "lite": "lite-server",
    "postinstall": "typings install",
    "typings": "typings",

    "copy:static": "copyfiles --up 2 \"src/static/**/*\" dist/",
    "copy:angular": "copyfiles \"node_modules/@angular/**/*\" dist/",
    "copy:angular2-in-memory-web-api": "copyfiles \"node_modules/angular2-in-memory-web-api/**/*\" dist/",
    "copy:rxjs": "copyfiles \"node_modules/rxjs/**/*\" dist/",
    "copy:bootstrap": "copyfiles --up 3 \"node_modules/bootstrap/dist/**/*\" dist/lib/bootstrap/",
    "copy:font-awesome": "copyfiles --up 2 \"node_modules/font-awesome/**/*\" dist/lib/font-awesome/",
    "copy:lodash": "copyfiles --up 2 node_modules/lodash/lodash.js dist/lib/",
    "copy:jquery": "copyfiles --up 3 node_modules/jquery/dist/jquery.min.js dist/lib/",
    "copy:moment": "copyfiles --up 3 node_modules/moment/min/moment.min.js dist/lib/",
    "copy:shim": "copyfiles --up 3 node_modules/core-js/client/shim.min.js dist/lib/",
    "copy:zone": "copyfiles --up 3 node_modules/zone.js/dist/zone.js dist/lib/",
    "copy:reflect": "copyfiles --up 2 node_modules/reflect-metadata/Reflect.js dist/lib/",
    "copy:system": "copyfiles --up 3 node_modules/systemjs/dist/system.src.js dist/lib/",
    "copy:system-config": "copyfiles systemjs.config.js dist/lib/",
    "copy": "concurrently \"npm run copy:static\" \"npm run copy:angular\" \"npm run copy:angular2-in-memory-web-api\" \"npm run copy:rxjs\" \"npm run copy:bootstrap\" \"npm run copy:font-awesome\" \"npm run copy:lodash\" \"npm run copy:jquery\" \"npm run copy:moment\" \"npm run copy:shim\" \"npm run copy:zone\" \"npm run copy:reflect\" \"npm run copy:system\" \"npm run copy:system-config\"",

    "build:copy": "npm run copy",
    "build:css": "node-sass src --output dist",
    "build:html": "pug --obj pug.config.json --pretty src --out dist",
    "build:js": "tsc",
    "build": "concurrently \"npm run build:copy\" \"npm run build:js\" \"npm run build:css\" \"npm run build:html\"",

    "watch:css": "rerun-script",
    "build:watch:css": "concurrently \"npm run build:css\" \"npm run watch:css\"",
    "build:watch:html": "pug --obj pug.config.json --pretty --watch src --out dist",
    "build:watch:js": "tsc --watch",
    "build:watch": "concurrently \"npm run build:watch:js\" \"npm run build:watch:html\" \"npm run build:watch:css\"",

    "dev": "concurrently \"npm run build:watch\" \"npm run lite\"",
    "start": "concurrently \"npm run copy\" \"npm run dev\""
  },
  "watches": {
    "build:css": "src/**/*.scss"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0",
    "@angular/upgrade": "2.0.0",
    "angular2-in-memory-web-api": "0.0.20",
    "bootstrap": "^3.3.6",
    "core-js": "^2.4.1",
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.0",
    "lodash": "^4.16.0",
    "moment": "^2.15.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "concurrently": "^2.2.0",
    "copyfiles": "^1.0.0",
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "latest",
    "rerun-script": "^0.6.0",
    "sass-graph": "^2.1.2",
    "typescript": "^2.0.2",
    "typings": "^1.3.2"
  }
}
